@model ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="my-2 alert-danger"></div>
        <form asp-action="ResetPassword" method="post">
            <!-- Hidden fields for email and token -->
            <input type="hidden" name="Email" value="@TempData["email"]">
            <input type="hidden" name="Token" value="@TempData["token"]">

            <input class="text" asp-for="NewPassword" placeholder="New Password" required="">
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

            <input type="submit" value="Reset Password">
        </form>
    </div>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
